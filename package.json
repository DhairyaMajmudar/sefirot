{
  "name": "@globalbrain/sefirot",
  "version": "0.8.0",
  "description": "Vue Components for Global Brain Design System.",
  "files": [
    "lib"
  ],
  "scripts": {
    "serve": "HOST=0.0.0.0 nuxt-ts",
    "start": "HOST=0.0.0.0 nuxt-ts start",
    "build": "nuxt-ts build",
    "generate": "nuxt-ts generate",
    "lint": "eslint --fix --ext .js,.ts,.vue --ignore-path .gitignore .",
    "lint:fail": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "coverage": "jest --collect-coverage",
    "docs:deploy": "yarn generate && push-dir --dir=dist --branch=gh-pages --cleanup"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:globalbrain/sefirot.git"
  },
  "keywords": [
    "sefirot",
    "vue",
    "vue component"
  ],
  "author": "Kia Ishii <ka.ishii@globalbrains.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/globalbrain/sefirot/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@juggle/resize-observer": "^3.0.2",
    "@nuxt/typescript-build": "^0.5.6",
    "@nuxt/typescript-runtime": "^0.3.8",
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/eslint-config-typescript": "^1.0.0",
    "@nuxtjs/google-analytics": "^2.2.3",
    "@nuxtjs/markdownit": "^1.2.7",
    "@types/jest": "^24.0.25",
    "@vue/composition-api": "^0.3.4",
    "@vue/test-utils": "^1.0.0-beta.30",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-preset-env": "^1.7.0",
    "codecov": "^3.6.1",
    "dayjs": "^1.8.19",
    "eslint": "^6.8.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-vue": "^6.1.2",
    "jest": "^24.9.0",
    "jest-serializer-vue": "^2.0.2",
    "markdown-it-highlight": "^0.2.0",
    "mutation-observer": "^1.0.3",
    "nuxt": "^2.11.0",
    "portal-vue": "^2.1.7",
    "postcss-custom-properties": "^9.0.2",
    "postcss-nested": "^4.2.1",
    "push-dir": "^0.4.1",
    "simplebar-vue": "^1.4.0",
    "tailwindcss": "^1.2.0-canary.5",
    "ts-jest": "^24.3.0",
    "typescript": "^3.7.5",
    "v-calendar": "^1.0.1",
    "vue": "^2.6.11",
    "vue-jest": "^3.0.5",
    "vue-router": "^3.1.5",
    "vue-server-renderer": "^2.6.11",
    "vue-template-compiler": "^2.6.11",
    "vue-thin-modal": "^1.3.0",
    "vuelidate": "^0.7.5",
    "webpack": "^4.41.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "vue"
    ],
    "moduleNameMapper": {
      "^sefirot/(.*)$": "<rootDir>/lib/$1",
      "^test/(.*)$": "<rootDir>/test/$1"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest",
      ".*\\.(vue)$": "vue-jest"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ],
    "setupFilesAfterEnv": [
      "./test/setup.ts"
    ],
    "collectCoverageFrom": [
      "lib/**/*.{js,vue}",
      "!lib/compositions/useResizeObserver.ts",
      "!lib/components/SInputTime.vue",
      "!lib/components/SPortalSnackbars.vue",
      "!lib/components/SResponsive.vue",
      "!lib/components/SSnackbar.vue",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "html",
      "json",
      "lcov",
      "text-summary"
    ]
  },
  "dependencies": {
    "add": "^2.0.6",
    "yarn": "^1.21.1"
  }
}
