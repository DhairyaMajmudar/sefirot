{
  "name": "@globalbrain/sefirot",
  "version": "0.7.3",
  "description": "Vue Components for Global Brain Design System.",
  "files": [
    "lib"
  ],
  "scripts": {
    "serve": "HOST=0.0.0.0 nuxt",
    "generate": "nuxt generate",
    "lint": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "lint:fail": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --collect-coverage",
    "docs:deploy": "yarn generate && push-dir --dir=dist --branch=gh-pages --cleanup"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:globalbrain/sefirot.git"
  },
  "keywords": [
    "sefirot",
    "vue",
    "vue component"
  ],
  "author": "Kia Ishii <ka.ishii@globalbrains.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/globalbrain/sefirot/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/google-analytics": "^2.2.2",
    "@nuxtjs/markdownit": "^1.2.7",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-preset-env": "^1.7.0",
    "codecov": "^3.6.1",
    "dayjs": "^1.8.17",
    "eslint": "^6.7.2",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-vue": "^6.0.1",
    "jest": "^24.9.0",
    "jest-serializer-vue": "^2.0.2",
    "markdown-it-highlight": "^0.2.0",
    "mutation-observer": "^1.0.3",
    "normalize.css": "^8.0.1",
    "nuxt": "^2.10.1",
    "portal-vue": "^2.1.6",
    "postcss-css-variables": "^0.14.0",
    "postcss-nested": "^4.2.1",
    "push-dir": "^0.4.1",
    "simplebar-vue": "^1.3.7",
    "v-calendar": "^0.9.7",
    "vue": "^2.6.10",
    "vue-jest": "^3.0.5",
    "vue-router": "^3.1.3",
    "vue-server-renderer": "^2.6.10",
    "vue-template-compiler": "^2.6.10",
    "vue-thin-modal": "^1.3.0",
    "vuelidate": "^0.7.4",
    "webpack": "^4.41.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/lib/$1"
    },
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ],
    "collectCoverageFrom": [
      "lib/**/*.{js,vue}",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "html",
      "json",
      "lcov",
      "text-summary"
    ]
  }
}
