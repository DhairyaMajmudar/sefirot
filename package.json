{
  "name": "@globalbrain/sefirot",
  "version": "0.8.2",
  "description": "Vue Components for Global Brain Design System.",
  "files": [
    "lib"
  ],
  "scripts": {
    "serve": "HOST=0.0.0.0 nuxt-ts",
    "start": "HOST=0.0.0.0 nuxt-ts start",
    "build": "nuxt-ts build",
    "generate": "nuxt-ts generate",
    "lint": "eslint --fix --ext .js,.ts,.vue --ignore-path .gitignore .",
    "lint:fail": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:all": "yarn lint && yarn coverage",
    "coverage": "jest --collect-coverage",
    "docs:deploy": "yarn generate && push-dir --dir=dist --branch=gh-pages --cleanup"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:globalbrain/sefirot.git"
  },
  "keywords": [
    "sefirot",
    "vue",
    "vue component"
  ],
  "author": "Kia Ishii <ka.ishii@globalbrains.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/globalbrain/sefirot/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@juggle/resize-observer": "^3.1.1",
    "@nuxt/typescript-build": "^0.6.0",
    "@nuxt/typescript-runtime": "^0.4.0",
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/eslint-config-typescript": "^1.0.2",
    "@nuxtjs/google-analytics": "^2.2.3",
    "@nuxtjs/markdownit": "^1.2.9",
    "@types/jest": "^25.1.4",
    "@vue/composition-api": "^0.4.0",
    "@vue/test-utils": "^1.0.0-beta.31",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.1.0",
    "babel-preset-env": "^1.7.0",
    "codecov": "^3.6.5",
    "dayjs": "^1.8.22",
    "eslint": "^6.8.0",
    "jest": "^25.1.0",
    "jest-serializer-vue": "^2.0.2",
    "markdown-it-highlight": "^0.2.0",
    "mutation-observer": "^1.0.3",
    "nuxt": "^2.11.0",
    "portal-vue": "^2.1.7",
    "postcss-custom-properties": "^9.1.1",
    "postcss-nested": "^4.2.1",
    "push-dir": "^0.4.1",
    "simplebar-vue": "^1.4.0",
    "tailwindcss": "^1.2.0",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3",
    "v-calendar": "^1.0.1",
    "vue": "^2.6.11",
    "vue-jest": "^3.0.5",
    "vue-router": "^3.1.6",
    "vue-server-renderer": "^2.6.11",
    "vue-template-compiler": "^2.6.11",
    "vuelidate": "^0.7.5",
    "webpack": "^4.42.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "vue"
    ],
    "moduleNameMapper": {
      "^sefirot/(.*)$": "<rootDir>/lib/$1",
      "^test/(.*)$": "<rootDir>/test/$1"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest",
      ".*\\.(vue)$": "vue-jest"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ],
    "setupFilesAfterEnv": [
      "./test/setup.ts"
    ],
    "collectCoverageFrom": [
      "lib/**/*.{js,ts,vue}",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "html",
      "json",
      "lcov",
      "text-summary"
    ]
  }
}
