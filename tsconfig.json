{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "isolatedModules": true,
    "useDefineForClassFields": false,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,

    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],

    "types": [
      "@types/node",
      "@types/jest"
    ]
  },

  "include": [
    "lib/**/*",
    "lib/**/*.vue",
    "test/**/*"
  ]
}
